<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:ignore="RtlHardcoded"
    tools:context="com.example.recyclopedia.GameActivityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/game_name"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="@dimen/game_name_margin_top"
            android:text="Freddie Mercury"/>

        <ImageView
            android:id="@+id/game_image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/game_image_size"
            android:layout_marginBottom="@dimen/game_image_margin_vertical"
            android:layout_marginTop="@dimen/game_image_margin_vertical"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"/>


        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="@string/bio"
            android:id="@+id/button_bio"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="@color/buttonGrey"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="@string/nonbio"
            android:id="@+id/button_nonbio"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="@color/buttonGrey"
            android:textColor="@color/white" />

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="@string/rec"
            android:id="@+id/button_rec"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="@color/buttonGrey"
            android:textColor="@color/white"/>

    </LinearLayout>

</ScrollView>