<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:ignore="RtlHardcoded"
    tools:context="com.example.recyclopedia.GameOverActivityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.44">

            <TextView
                android:id="@+id/game_over"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCORE:"
                android:gravity="center_vertical"
                android:textSize="50dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_above="@+id/button_done"
                android:layout_alignRight="@+id/button_done"
                android:layout_alignEnd="@+id/button_done"
                android:layout_marginBottom="40dp" />

            <TextView
                android:id="@+id/total_score"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:gravity="center_vertical"
                android:textColor="@color/lightGreen"
                android:textSize="50dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_alignTop="@+id/game_over"
                android:layout_toRightOf="@+id/game_over"
                android:layout_toEndOf="@+id/game_over" />

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="@string/done"
                android:id="@+id/button_done"
                android:layout_gravity="center_horizontal"
                android:background="@color/buttonColor"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="255dp" />

        </RelativeLayout>


    </LinearLayout>

</ScrollView>